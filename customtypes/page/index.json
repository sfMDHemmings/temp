{
    "id": "page",
    "label": "Page",
    "format": "page",
    "repeatable": true,
    "status": true,
    "json": {
        "Main": {
            "uid": {
                "config": {
                    "label": "UID",
                    "placeholder": "Page UID / URL slug"
                },
                "type": "UID"
            },
            "category": {
                "type": "Link",
                "config": {
                    "label": "Parent",
                    "select": "document",
                    "customtypes": ["page"]
                }
            },
            "slices": {
                "type": "Slices",
                "fieldset": "Slice Zone",
                "config": {
                    "choices": {}
                }
            }
        },
        "SEO & Metadata": {
            "meta_title": {
                "config": {
                    "label": "Meta Title",
                    "placeholder": "A title of the page used for social media and search engines"
                },
                "type": "Text"
            },
            "meta_description": {
                "config": {
                    "label": "Meta Description",
                    "placeholder": "A brief summary of the page"
                },
                "type": "Text"
            },
            "meta_image": {
                "config": {
                    "constraint": {
                        "height": 1260,
                        "width": 2400
                    },
                    "label": "Meta Image",
                    "thumbnails": []
                },
                "type": "Image"
            },
            "slices1": {
                "type": "Slices",
                "fieldset": "Slice Zone",
                "config": {
                    "choices": {
                        "schema_event": {
                            "type": "SharedSlice"
                        },
                        "schema_organisation": {
                            "type": "SharedSlice"
                        }
                    }
                }
            }
        },
        "Page Builder": {
            "slices2": {
                "type": "Slices",
                "fieldset": "Slice Zone",
                "config": {
                    "choices": {
                        "text_block": {
                            "type": "SharedSlice"
                        },
                        "contact_form": {
                            "type": "SharedSlice"
                        },
                        "lead_gen_form": {
                            "type": "SharedSlice"
                        },
                        "herotext": {
                            "type": "SharedSlice"
                        },
                        "test_delete": {
                            "type": "SharedSlice"
                        }
                    }
                }
            }
        }
    }
}
